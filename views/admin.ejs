<!DOCTYPE html>
<html lang="az">
<head>
  <meta charset="UTF-8">
  <title>Admin Panel</title>
  <link rel="stylesheet" href="/admin.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f6fa;
      padding: 20px;
    }
    h1 {
      color: #2c3e50;
      text-align: center;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 15px;
      background: #fff;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      border-radius: 10px;
      overflow: hidden;
    }
    th, td {
      padding: 10px;
      border-bottom: 1px solid #ddd;
      text-align: center;
    }
    th {
      background: #2c3e50;
      color: #fff;
    }
    tr:hover {
      background: #ecf0f1;
    }
    button {
      cursor: pointer;
    }
    .invite-btn {
      background: #27ae60;
      color: #fff;
      border: none;
      padding: 6px 10px;
      border-radius: 6px;
      font-size: 13px;
    }
    .invite-btn:hover {
      background: #219150;
    }
    .delete-btn {
      background: #e74c3c;
      color: white;
      border: none;
      padding: 6px 10px;
      border-radius: 6px;
    }
    .delete-btn:hover {
      background: #c0392b;
    }
    #logout {
      position: absolute;
      top: 20px;
      right: 20px;
      text-decoration: none;
      background: #e67e22;
      color: white;
      padding: 8px 14px;
      border-radius: 8px;
    }
  </style>
</head>
<body>
  <h1>RSVP Siyahƒ±sƒ±</h1>

<label>Ad filtri: <input type="text" id="filterName" placeholder="Ad √ºzr…ô axtar..."></label>
<label>ƒ∞≈ütirak statusu:
  <select id="filterAttendance">
    <option value="">Hamƒ±sƒ±</option>
    <option value="Yes">G…ôl…ôc…ôk</option>
    <option value="No">G…ôlm…ôy…ôc…ôk</option>
    <option value="Maybe">B…ôlk…ô</option>
  </select>
</label>
<button id="applyFilter">Filtrl…ô</button>


  <table id="rsvpTable">
    <thead>
      <tr>
        <th>Ad</th>
        <th>Email</th>
        <th>Telefon</th>
        <th>Status</th>
        <th>Qeyd</th>
        <th>Tarix</th>
        <th>∆èm…ôliyyatlar</th>
      </tr>
    </thead>
    <tbody>
      <% if (rsvps.length === 0) { %>
        <tr><td colspan="7">He√ß bir qeyd yoxdur.</td></tr>
      <% } else { %>
        <% rsvps.forEach(rsvp => { %>
          <tr>
            <td><%= rsvp.name %></td>
            <td><%= rsvp.email %></td>
            <td><%= rsvp.phone || '-' %></td>
            <td><%= rsvp.attendance %></td>
            <td><%= rsvp.note || '-' %></td>
            <td><%= new Date(rsvp.createdAt).toLocaleString() %></td>
            <td>
              <button class="invite-btn" onclick="sendInvite('<%= rsvp._id %>', '<%= rsvp.email %>', '<%= rsvp.name %>')">üì® D…ôv…ôt g√∂nd…ôr</button>
              <button class="delete-btn" onclick="deleteRsvp('<%= rsvp._id %>')">üóë Sil</button>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>

  <a href="/logout" id="logout">√áƒ±xƒ±≈ü</a>

  <script>
    // T…ôk bir ≈ü…ôxs…ô d…ôv…ôt g√∂nd…ôr
    async function sendInvite(id, email, name) {
      if (!confirm(`${name} (${email}) √º√ß√ºn d…ôv…ôt g√∂nd…ôrilsin?`)) return;

      const res = await fetch(`/api/send-invite/${id}`, { method: "POST" });
      const data = await res.json();
      alert(data.message || "Email g√∂nd…ôrildi!");
    }

    // RSVP sil
    async function deleteRsvp(id) {
      if (!confirm("Bu qeyd silinsin?")) return;
      const res = await fetch(`/api/rsvp/${id}`, { method: "DELETE" });
      const data = await res.json();
      alert(data.message);
      location.reload();
    }
  </script>
</body>
</html>
